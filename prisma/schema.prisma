generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Templates needed for Next-Auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Medication {
  id              String         @id @default(cuid())
  tradeName       String
  formId          String
  form            MedicationForm @relation(fields: [formId], references: [id])
  dosageValue     Float
  unitId          String
  unit            Unit           @relation(fields: [unitId], references: [id])
  packageQuantity Int
  expiryDate      DateTime?
  moleculeId      String
  molecule        Molecule       @relation(fields: [moleculeId], references: [id])
  manufacturerId  String
  manufacturer    Manufacturer   @relation(fields: [manufacturerId], references: [id])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model MedicationForm {
  id          String       @id @default(cuid())
  name        String       @unique
  medications Medication[]
}

model Unit {
  id          String       @id @default(cuid())
  name        String       @unique
  medications Medication[]
}

model Molecule {
  id          String       @id @default(cuid())
  name        String       @unique
  medications Medication[]
}

model Manufacturer {
  id          String       @id @default(cuid())
  name        String       @unique
  medications Medication[]
}
